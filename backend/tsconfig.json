{
    "include": ["src/**/*", "src/graphql/schemas/*.graphql"],
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "ESNext",
        "moduleDetection": "force",
        "types": ["bun-types"],

        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,

        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noPropertyAccessFromIndexSignature": false,

        "baseUrl": ".",
        "paths": {
            "@datasources/*": ["src/graphql/datasources/*"],
            "@resolvers/*": ["src/graphql/resolvers/*"],
            "@schemas/*": ["src/graphql/schemas/*"],
            "@models/*": ["src/models/*"],
            "@routes/*": ["src/routes/*"],
            "@scripts/*": ["src/scripts/*"],
            "@util/*": ["src/util/*"]
        }
    }
}
