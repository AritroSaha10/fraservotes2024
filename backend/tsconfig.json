{
    "include": [
        "src/**/*",
        "src/graphql/schemas/*.graphql"
    ],
    "compilerOptions": {
        "rootDirs": [
            "src"
        ],
        "outDir": "dist",
        "lib": [
            "es2020"
        ],
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": [
            "node"
        ],
        "typeRoots": ["./node_modules/@types"]
    }
}